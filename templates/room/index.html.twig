{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1>Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Price</th>
                <th>Occupants</th>
                <th>Roomname</th>
                <th>Image</th>
                <th>Type</th>
                <th>Extra</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.price }}</td>
                 <td>{{ room.occupants }}</td>
                <td>{{ room.roomname }}</td>
                {% for image in room.image %}
                    <td><img src="{{ vich_uploader_asset(image, 'imageFile') }}" alt="{{ image.imageName }}" style="width:125px;height:125px;"></td>
                {% endfor %}
                    <td>{{ room.typeId }}</td>
                {% for extra in room.extra %}
                    <td>{{ extra.description }} â‚¬{{ extra.ExtraPrice }}</td>
                {% endfor %}
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}

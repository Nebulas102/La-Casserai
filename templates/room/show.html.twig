{% extends 'base.html.twig' %}

{% block title %}Room{% endblock %}

{% block body %}
    <h1>Room</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ room.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ room.number }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ room.size }}</td>
            </tr>
            <tr>
            <th>Image</th>
            <td><img src="{{ vich_uploader_asset(room, 'imageFile') }}" alt="{{ room.imageName }}" style=""></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('room_index') }}">back to list</a>

    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>

